<view class="container">
  <view class="weibo-group" wx:for="{{publishData}}" wx:key="_id">
    <view class="user-group">
      <image class="avatar" src="{{item.author.avatarUrl ? item.author.avatarUrl : ''}}"></image>
      <view class="right-info">
        <view class="username">{{item.author.nickName}}</view>
        <view class="detail-info">
          <view class="titme">2020/1/11</view>
          <view class="from">来自iphone6</view>
        </view>
      </view>
    </view>

    <view class="weibo-content-group">
      <view class="content">
        {{item.content}}
      </view>
      <view class="image-list-group" wx:for="{{item.chooseImages}}" wx:key="index">
        <image mode="aspectFill" style="width: {{ImageSize}}/{{item.chooseImages}}px; height: {{ImageSize}}/{{item.chooseImages}}px;" src="{{item}}"></image>
        <view wx:if="{{images.length % 3 == 2}}" style="width: {{ImageSize}}/{{item.chooseImages}}px; height: {{ImageSize}}/{{item.chooseImages}}px"></view>
      </view>
      <view class="weibo-handle">
        <view class="comment-group">
          <image src="../../images/comment.png"></image>评论
        </view>
        <view class="praise-group">
          <image src="../../images/like.png"></image>赞
        </view>
      </view>
    </view>
  </view>
