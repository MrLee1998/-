.container {
  /* padding: 40rpx; */
  background: #f2f2ff;
}
.container .weibo-group {
  width: 100%;
  margin-bottom: 30rpx;
  background: #fff;
  padding: 40rpx;
  box-sizing: border-box;
}
.weibo-group .user-group {
  display: flex;
}
.user-group .avatar {
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
}
.user-group .right-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.right-info .username {
  font-size: 28rpx;
  color: #323232;
}
.right-info .detail-info {
  font-size: 24rpx;
  color: #656565;
  display: flex;
}
.detail-info .time {
  margin-right: 20rpx;
}
.detail-info .from {
  padding-right: 20rpx;
}
.weibo-content-group {
  padding-top: 30rpx;
}
.weibo-content-group .content {
  font-size: 32rpx;
  background: #f0f0f0;
  padding: 10rpx 0;
  border-radius: 5rpx;
}
.weibo-content-group .image-list-group {
  padding-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
}
.image-list-group image {
  margin-bottom: 5rpx;
}
.image-list-group  video {
  width: 100%;
}
.weibo-handle {
  display: flex;
  padding-top: 30rpx;
  font-size: 24rpx;
}
.location image {
  padding-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.weibo-handle image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.weibo-handle view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.writeBtn {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgb(116,194,223);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 70rpx;
  color: #fff;
  box-shadow: 0 0 5px rgba(0,0,0,0,0.5);
}
.writeBtn view {
  margin-bottom: 15rpx;
}
