.container {
  padding: 40rpx 60rpx;
}
.container .textarea {
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
}
.container .location-group {
  margin-top: 40rpx;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  padding: 30rpx 20rpx;
  justify-content: space-between;
}
.location-group .left-group {
  display: flex;
  font-size: 28rpx;
}
.location-group .left-group .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}
.location-group .arrow {
  width: 40rpx;
  height: 40rpx;
}
.submitBtn {
  margin-top: 40rpx;
  width: 100%;
}