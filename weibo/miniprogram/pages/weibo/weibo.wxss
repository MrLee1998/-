.container {
  padding: 40rpx 60rpx;
}
.container .textarea {
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
}
.container .image-list-group {
  padding-top: 20rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.container .image-list-group .image-group {
  margin-right: 5rpx;
  position: relative;
}
.container .image-list-group .image-group image {
  width: 100%;
  height: 100%;
}
.container .image-list-group .image-group .close-btn {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: -30rpx;
  top: -30rpx;
  z-index: 10;
  background-size: 60rpx;
  background-repeat: no-repeat;
  background-image: url(https://6c69-lizun-9gtuuwmq812c470e-1303973987.tcb.qcloud.la/delete.png?sign=6c0ff91cbd8d88097e1979267deb9d8a&t=1608729263);
}
.image-list-group .add-image-btn {
  font-size: 200rpx;
  background: #f2f2f2;
  color: #a9a9a9;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-image-btn view {
  margin-top: -20rpx;
}
.container .location-group {
  margin-top: 40rpx;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  padding: 30rpx 20rpx;
  justify-content: space-between;
}
.location-group .left-group {
  display: flex;
  font-size: 28rpx;
}
.location-group .left-group .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}
.location-group .arrow {
  width: 40rpx;
  height: 40rpx;
}
.submitBtn {
  margin-top: 40rpx;
  width: 100%;
}